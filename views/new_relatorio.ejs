            <label for="DPontualidade" id="titlePontualidade">Informação geral</label>
            <input id="DPontualidade" name="DPontualidade" class="form-control input-sm"></input> </br>
            <p><label for="DPontualidade">Detalhes da pontualidade</label></p>
            <textarea id="DPontualidade" name="DPontualidade" rows="4" cols="50"></textarea>
