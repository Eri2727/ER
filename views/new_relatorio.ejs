            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <p class="formText card-title">Comportamento</p>

                        <div class="slidecontainer">
                            <input type="range" value="50" min="1" max="100" id="slideComportamento"
                                oninput="this.nextElementSibling.value = this.value" class="slider">
                            <output>50</output>
                        </div>
                        <label for="DComportamento" id="titleComportamento">Informação geral</label>
                        <input id="DComportamento" name="DComportamento" class="form-control input-sm"></input> </br>
                        <p><label for="DComportamento" id="detalhesComportamento">Detalhes do comportamento</label></p>
                        <textarea id="DComportamento" name="DComportamento" rows="4" cols="50"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>

        <div>
            <p class="formText">Assiduidade</p>
