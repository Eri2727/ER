<div class="headerBar">
    <img class="iconbtn" src="/assets/goBack.png" onclick="history.back()" />
</div>

<div class="logoutnbtn">
    <form action="/logout" method="post">
        <button class="btnlog" type="submit">
            <img class="iconbtn" src="/assets/account.png" />
        </button>
    </form>
</div>



<form action="/submitRelatorio">

    <h1>Comportamento</h1>

    <div class="slidecontainer">
        <input type="range" value="50" min="1" max="100" id="slideComportamento" oninput="this.nextElementSibling.value = this.value">
        <output>50</output>
    </div>

    <p><label for="DComportamento">Descrição do comportamento</label></p>
    <textarea id="DComportamento" name="DComportamento" rows="4" cols="50"></textarea>
    <br>

    <h1>Assiduidade</h1>

    <div class="slidecontainer">
        <input type="range" value="50" min="1" max="100" id="slideAssiduidade" oninput="this.nextElementSibling.value = this.value">
        <output>50</output>
    </div>

    <p><label for="DAssiduidade">Descrição da assiduidade</label></p>
    <textarea id="DAssiduidade" name="DAssiduidade" rows="4" cols="50"></textarea>
    <br>

    <p></p>

    <div class="submitRelatorio">
        <button class="btnSubmit" type="submit"> Enviar </button>
        <button class="btnSave" type="submit"> Save </button>
        <input class='btnUrgent' type="checkbox" id="urgente" name="urgente" value="true">
        <label for="urgente"> É Urgente</label><br>
    </div>
    
</form>

