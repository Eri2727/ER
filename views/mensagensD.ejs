<link rel="stylesheet" type="text/css" href="/stylesheets/mensagens.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script defer src="/javascripts/messages.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<head>
    <meta charset="utf-8">
    <title>CaderNet </title>
</head>

<div class="headerBar">
    <div class="headerLeft">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
            class="backIcon bi bi-arrow-left-square" viewBox="0 0 16 16" onclick="history.back()">
            <path fill-rule="evenodd"
                d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
        <p class="headerText">Mensagens</p>
    </div>
    <div>
        <form action="/logout" method="post">
            <button class="btnlog" type="submit">
                <p class="textSair">Sair</p>
            </button>
        </form>
    </div>
</div>

<html>

<head>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css"
        rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="messaging">
            <div class="inbox_msg">
                <div class="mesgs">
                    <div class="msg_history" id="chatBox">
                        <div id="messageItems">
                            <% mensagens.forEach(function (mensagem) { %>
                                <% if(mensagem.type=='encarregado' ){ %>
                                    <div class="incoming_msg">
                                        <div class="received_msg">
                                            <div class="received_withd_msg">
                                                <!--nome do professor-->
                                                <p>
                                                    <%= mensagem.sender %> - <%= mensagem.mensagem %>
                                                </p>
                                                <!--<span class="time_date"> DATA HORA</span>-->
                                            </div>
                                        </div>
                                        <p></p>
                                    </div>
                                    <% } else { %>
                                        <div class="outgoing_msg">
                                            <div class="sent_msg">
                                                <!--nome do EE-->
                                                <p>
                                                    <%= mensagem.sender %> - <%= mensagem.mensagem %>
                                                </p>
                                                <!--<span class="time_date"> DATA HORA</span>-->
                                            </div>
                                            <p></p>
                                        </div>
                                        <% } %>
                                            <% }) %>
                        </div>
                    </div>
                    <form method="post">
                        <div class="type_msg">
                            <div class="input_msg_write">
                                <input type="text" id="mensagem" name="mensagem" class="write_msg"
                                    placeholder="Escreva a mensagem" required />
                                <button class="msg_send_btn" type="submit"><i class="fa fa-paper-plane-o"
                                        aria-hidden="true"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>