<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<head>
    <meta charset="utf-8">
    <title>CaderNet </title>
</head>

<div class="headerBar">
    <div class="headerLeft">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
            class="backIcon bi bi-arrow-left-square" viewBox="0 0 16 16" onclick="window.location='http://localhost:3000/homepage/D/'">
            <path fill-rule="evenodd"
                d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
        <p class="headerText">Lista de Alunos</p>
    </div>

    <div>
        <form action="/logout" method="post">
            <button class="btnlog" type="submit">
                <p class="textSair">Sair</p>
            </button>
        </form>
    </div>
</div>

<br>
<ul class="listRelatorios" id="AlunosList">
    <input class="form-control" id="myInput" type="text" placeholder="Pesquisar Aluno - Encarregado de Educação">
    <% alunos.forEach(function (user) { %>
        <li>
            <div class="spanUser">
                <h1 class="textUser">
                    <%= user.nome_aluno %> - <%= user.nome_ee %>
                </h1>
                <div class="btnUser">
                    <button type="button" class="btnNewR"
                        onclick="window.location='/homepage/D/<%= turma %>/<%= user.id %>/relatorios'">Relatórios</button>
                    <button type="button" class="btnNewR"
                        onclick="window.location='/homepage/D/<%= turma %>/<%= user.id %>/mensagens'">Mensagens</button>
                </div>
            </div>
        </li>
        <% }) %>
</ul>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#AlunosList li").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>