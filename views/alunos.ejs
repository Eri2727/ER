<div class="headerBar">
    <div class="headerLeft">
        <img class="backIcon" src="/assets/goBack.png" onclick="window.location='/homepage/D'" />
        <p class="headerText">Lista de Alunos</p>
    </div>

    <div>
        <form action="/logout" method="post">
            <button class="btnlog" type="submit">
                <img class="iconbtn" src="/assets/logout.png" />
            </button>
        </form>
    </div>
</div>

<br>
<ul class="listRelatorios" id="AlunosList">
    <input class="form-control" id="myInput" type="text" placeholder="Pesquisar..">
    <% alunos.forEach(function (user) { %>
        <li>
            <div class="spanUser">
                <h1 class="textUser">
                    <%= user.nome_aluno %> - <%= user.nome_ee %>
                </h1>
                <div class="btnUser">
                    <button type="button" class="btnNewR"
                        onclick="window.location='/homepage/D/<%= turma %>/<%= user.id %>/relatorios'">Relat√≥rios</button>
                    <button type="button" class="btnNewR"
                        onclick="window.location='/homepage/D/<%= turma %>/<%= user.id %>/mensagens'">Mensagens</button>
                </div>
            </div>
        </li>
        <% }) %>
</ul>

<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#AlunosList li").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>