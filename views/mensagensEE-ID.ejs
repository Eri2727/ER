<link rel="stylesheet" type="text/css" href="/stylesheets/alunos.css" />
<link rel="stylesheet" type="text/css" href="/stylesheets/mensagensEE.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
	integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script defer src="/javascripts/messages.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<head>
	<meta charset="utf-8">
	<title>CaderNet</title>
</head>

<div class="headerBar">
	<div class="headerLeft">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
			class="backIcon bi bi-arrow-left-square" viewBox="0 0 16 16" onclick="history.back()">
			<path fill-rule="evenodd"
				d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
		</svg>
		<p class="headerText">Mensagens </p>
	</div>
	<div>
		<form action="/logout" method="post">
			<button class="btnlog" type="submit">
				<p class="textSair">Sair</p>
			</button>
		</form>
	</div>
</div>
<p></p>
<div class="container">
	<div class="messaging">
		<div class="inbox_msg">
			<div class="inbox_people">
				<div class="headind_srch">
					<div class="recent_heading">
						<h4>Professores</h4>
					</div>
					<div class="srch_bar">
						<div class="stylish-input-group">

							<span class="input-group-addon">
								<button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
							</span>
						</div>
					</div>
				</div>
				<div class="inbox_chat ">
					<% docentesList.forEach(function (docente) { %>
						<div class="chat_list active_chat"
							onclick="window.location='http://localhost:3000/homepage/EE/1/mensagens' + '/<%= docente.docente_id%>'">
							<div class="chat_people">
								<div class="chat_ib target">
									<h5>
										<%= docente.nome %>
									</h5>
								</div>
							</div>
						</div>
						<% }) %>
				</div>
			</div>
			<div class="mesgs">
				<div class="msg_history " id="chatBox">
					<div id="messageItems">
						<% mensagens.forEach(function (mensagem) { %>
							<% if(mensagem.type=='docente' ){ %>
								<div class="incoming_msg">
									<div class="received_msg">
										<div class="received_withd_msg">
											<!--nome do professor-->
											<p>
												<%= mensagem.sender %> - <%= mensagem.mensagem %>
											</p>
											<!--<span class="time_date"> DATA HORA</span>-->
										</div>
									</div>
									<p></p>
								</div>
								<% } else { %>
									<div class="outgoing_msg">
										<div class="sent_msg">
											<!--nome do EE-->
											<p>
												<%= mensagem.sender %> - <%= mensagem.mensagem %>
											</p>
											<!--<span class="time_date"> DATA HORA</span>-->
										</div>
										<p></p>
									</div>
									<% } %>
										<% }) %>
					</div>
				</div>
				<form method="post">
					<div class="type_msg">
						<div class="input_msg_write">
							<input type="text" id="mensagem" name="mensagem" class="write_msg"
								placeholder="Escreva a mensagem" required />
							<button class="msg_send_btn" type="submit"><i class="fa fa-paper-plane-o"
									aria-hidden="true"></i></button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>