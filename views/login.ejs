<%- include('./layout.ejs') %>
	<link rel="stylesheet" type="text/css" href="./stylesheets/login.css" />
	<div class="container" id="container">
		<div class="form-container sign-up-container">
			<form action="/loginEE" method="post">
				<h1>Bem vindo, Encarregado de Educação!</h1>
				<input type="username" name="username" placeholder="Username" />
				<input type="password" name="password" placeholder="Password" />
				<button type="submit">Entrar</button>
			</form>
		</div>
		<div class="form-container sign-in-container">
			<form action="/loginD" method="post">
				<h1>Bem vindo Docente!</h1>
				<input type="username" name="username" placeholder="Username" />
				<input type="password" name="password" placeholder="Password" />
				<button type="submit">Entrar</button>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left">
					<h1>É Docente?</h1>
					<p></p>
					<button class="ghost" id="signIn">Clique aqui!</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1>É Encarregado de Educação?</h1>
					<p></p>
					<button class="ghost" id="signUp">Clique aqui!</button>
				</div>
			</div>
		</div>
	</div>

	<script defer src="./javascripts/auth.js"></script>